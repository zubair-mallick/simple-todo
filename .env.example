# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/note-taking-app

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# Email Configuration (Resend - Reliable Email Service)
RESEND_API_KEY=re_your_resend_api_key_here
FROM_EMAIL=HD Notes <noreply@yourdomain.com>

# Firebase Configuration (for Google OAuth)
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project-id",...}
FIREBASE_PROJECT_ID=your-firebase-project-id

# Frontend URL (for CORS and email links)
FRONTEND_URL=https://your-frontend-app.netlify.app
